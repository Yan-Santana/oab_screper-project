
# API do Scraper
SCRAPER_API_URL=http://localhost:8000

# Configurações do LLM ##

# Provedor do LLM: openai, ollama, cloudflare, mock
LLM_PROVIDER=mock

# OpenAI (se LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Ollama (se LLM_PROVIDER=ollama)
OLLAMA_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# Cloudflare Workers AI (se LLM_PROVIDER=cloudflare)
# Obtenha em: https://dash.cloudflare.com/
#CF_ACCOUNT_ID=ID_ACCOUNT_ID
#CF_API_TOKEN=KEY
#CF_MODEL=tinyllama/tinyllama-1.1b-chat-v1.0
CF_MODEL=@cf/meta/llama-2-7b-chat-int8

CF_ACCOUNT_ID=ID_ACCOUNT_ID  
CF_API_TOKEN=MKEY
OPENAI_API_KEY=cf_dummy_key
OPENAI_API_BASE=https://api.cloudflare.com/client/v4/accounts/ID_ACCOUNT_ID /ai/openai/v1
OPENAI_MODEL=qwen1.5-7b-chat-awq

# Configurações Gerais
# Número máximo de iterações do agente
MAX_ITERATIONS=5

# Timeout para requisições (segundos)
TIMEOUT=120

# Habilitar logs detalhados
VERBOSE=true


# Ambiente: development, production
ENVIRONMENT=development

# Porta da API
API_PORT=8000

# Porta do agente
AGENT_PORT=8001

# Configurações do Playwright
# Executar browser em modo headless
HEADLESS=true

# Timeout para operações do browser (ms)
BROWSER_TIMEOUT=120000

# Nível de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=

# Configurações do Docker

# Nome do container
CONTAINER_NAME=oab-scraper

# Rede Docker
NETWORK_NAME=oab-network